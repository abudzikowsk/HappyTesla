@model List<CarViewModel>

@{
    ViewData["Title"] = "All cars";
}

<h1 class="display-1">All cars</h1>
<a asp-action="CreateCar">Create car</a>
@if (Model.Count > 0)
{
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Model</th>
            <th scope="col">Price</th>
            <th scope="col">Color</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Name</td>
                <td>@car.Model</td>
                <td>@car.Price</td>
                <td>@car.Color</td>
                <td>
                        <form asp-action="DeleteCar" asp-route-carId="@car.Id" method="post">
                            <button class="btn btn-outline-secondary" type="submit">Remove car</button>
                        </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}