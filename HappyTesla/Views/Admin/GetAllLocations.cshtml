@model List<LocationViewModel>

@{
    ViewData["Title"] = "All locations";
}

<h1 class="display-1">All locations</h1>
<a asp-action="CreateLocation">Create location</a>
@if (Model.Count > 0)
{
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Adress</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.Country</td>
                <td>@location.City</td>
                <td>@location.Adress</td>
                <td>
                        <form asp-action="DeleteLocation" asp-route-locationId="@location.Id" method="post">
                            <button class="btn btn-outline-secondary" type="submit">Remove location</button>
                        </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}